<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@android:color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/create_timer_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintBottom_toTopOf="@id/creation_timer_name_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/creation_timer_name_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_space_1_5"
        android:layout_marginStart="@dimen/default_space_1_5"
        android:layout_marginTop="@dimen/default_space_1_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_timer_toolbar">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/creation_timer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/timer_name"
            android:inputType="textCapSentences"
            android:singleLine="true"/>

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/icon_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_color_white"
        android:tint="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@id/choose_color"
        app:layout_constraintLeft_toLeftOf="@id/creation_timer_name_layout"
        app:layout_constraintTop_toTopOf="@id/choose_color"/>

    <Spinner
        android:id="@+id/choose_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_space_1_5"
        android:layout_marginStart="@dimen/default_space"
        android:layout_marginTop="@dimen/default_space"
        app:layout_constraintLeft_toRightOf="@id/icon_color"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/creation_timer_name_layout"/>

    <CheckBox
        android:id="@+id/start_after_creation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_space"
        android:text="@string/start_timer_after_creation"
        app:layout_constraintLeft_toLeftOf="@id/icon_color"
        app:layout_constraintTop_toBottomOf="@id/choose_color"/>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/default_shadow_height"
        android:background="@drawable/background_shadow_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_timer_toolbar"/>

</android.support.constraint.ConstraintLayout>