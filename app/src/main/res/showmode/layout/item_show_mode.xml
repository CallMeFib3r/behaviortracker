<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:parentTag="android.support.constraint.ConstraintLayout">

    <TextView
        android:id="@+id/show_mode_timer_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/show_mode_timer_time_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="00:12:48" />

    <ImageView
        android:id="@+id/show_mode_timer_status"
        android:layout_width="@dimen/timer_play_pause_size"
        android:layout_height="@dimen/timer_play_pause_size"
        android:layout_marginRight="@dimen/default_space"
        app:layout_constraintBottom_toBottomOf="@id/show_mode_timer_name"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/show_mode_timer_name"
        app:layout_constraintTop_toTopOf="@id/show_mode_timer_name"
        tools:src="@drawable/ic_play" />

    <TextView
        android:id="@+id/show_mode_timer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/show_mode_timer_name_text"
        app:layout_constraintLeft_toRightOf="@id/show_mode_timer_status"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_mode_timer_time"
        tools:text="Work" />

</merge>